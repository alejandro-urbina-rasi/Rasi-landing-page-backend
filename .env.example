# Entorno
NODE_ENV=development
PORT=3000

# Seguridad
# Habilitar validación de firma de webhook (recomendado siempre en test y producción)
VALIDATE_SIGNATURE=false

# Validar IP de origen en webhooks (habilitado por defecto)
# En producción SIEMPRE debe estar habilitado
# Solo deshabilitar en desarrollo local si es necesario
VALIDATE_IP=true

# Rate Limiting (protección contra DDoS y fuerza bruta)
# Solo deshabilitar en desarrollo si interfiere con testing
# En producción DEBE estar habilitado
DISABLE_RATE_LIMIT=false

# ePayco Credentials
# ⚠️ IMPORTANTE: Obtener de https://dashboard.epayco.co
# - Public Key: Proyecto > Configuración > API Keys
# - Private Key: Proyecto > Configuración > API Keys
EPAYCO_PUBLIC_KEY=your_public_key_here
EPAYCO_PRIVATE_KEY=your_private_key_here
EPAYCO_APIFY_URL=https://apify.epayco.co
EPAYCO_TEST_MODE=true

# Frontend
FRONTEND_URL=http://localhost:5173
MERCHANT_NAME=Rasi

# Google Sheets
# ⚠️ Obtener de Google Cloud Console
# 1. Crear proyecto en https://console.cloud.google.com
# 2. Habilitar Google Sheets API
# 3. Crear Service Account
# 4. Descargar JSON de credenciales
GOOGLE_SHEET_ID=your_sheet_id_here
GOOGLE_CREDENTIALS_PATH=./google-credentials.json

# Email (Nodemailer con Gmail)
# ⚠️ IMPORTANTE: Usar App Password, NO contraseña de Gmail
# 1. Habilitar 2FA en tu cuenta de Gmail
# 2. Ir a Seguridad > Contraseñas de aplicaciones
# 3. Generar nueva contraseña para "Correo"
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_FROM=Your Name <your_email@gmail.com>

# Descuentos
ANNUAL_DISCOUNT_PERCENTAGE=10

# Tasa de cambio por defecto (en caso de fallo de API)
DEFAULT_USD_COP_RATE=3763.85

# Moneda de ePayco
EPAYCO_CURRENCY=COP

# URLs para respuestas y webhooks (PRODUCCIÓN)
# ⚠️ Cambiar en producción a tu dominio real
# Ejemplo: https://api.tudominio.com/payment-response
EPAYCO_RESPONSE_URL=
EPAYCO_CONFIRMATION_URL=

# Base de datos (cuando migres de global a PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Logs y monitoreo (opcional)
# SENTRY_DSN=
# LOG_LEVEL=info
